generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  price       Float
  image       String?
  stock       Int
  isFeatured  Boolean?
  isOnSale    Boolean?
  isNew       Boolean?
  createdAT   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  marca       String
}

model Pregunta {
  id        Int      @id @default(autoincrement())
  texto     String
  respuesta String
  createdAt DateTime @default(now())
}
